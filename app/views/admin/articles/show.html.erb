<%- model_class = Article -%>
<div class="page-header">
<h1><%= @article.title %></h1>
</div>

<article id="article">
  <div class="time"><%= l(@article.created_at) %></div>
  <h3>
    <% @article.labels.each do |label| %>
      <span class="label label-primary" style="margin-right: 1rem"><%= label.name %> </span>
    <% end %>
  </h3>

  <div class="markdown-body"><%= markdown(@article.content) %> </div>
</article>

<div>
<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_articles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_article_path(@article), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_article_path(@article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<br>
<%= render "comment" %>



