<%- model_class = Article -%>
<h4>
  <%= @article.title %>
</h4>

<div class="panel panel-default">
  <div class="panel-heading">
    <% @article.labels.each do |label| %>
        <span class="label label-primary" style="margin-right: 1rem"><%= label.name %> 
        </span>
      <% end %>
  </div>
  
  <div class="panel-body">
    
    <div class="markdown-body"><%= markdown(@article.content) %> </div>
  </div>
</div>

<div>
<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_articles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_article_path(@article), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_article_path(@article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<br>

<div id="disqus_thread"></div>
<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES * * */
    var disqus_shortname = 'chalkblog';
    
    /* * * DON'T EDIT BELOW THIS LINE * * */
