<div class="page-header">
<h1><%= t("admin.navbar.categories") %></h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>分类</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, admin_category_path(category)%></td>
      <td>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_category_path(category),
                      :method => :delete,
                      :data => { :confirm => t('helpers.links.confirm') },
                      :class => 'btn btn-xs btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")), new_admin_category_path, :class => 'btn btn-primary'  %>
