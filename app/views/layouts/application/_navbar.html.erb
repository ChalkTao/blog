<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "BLOG", root_path, class: "navbar-brand" %>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to t('app.navbar.home'), home_index_path %></li>
        <li><%= link_to t('app.navbar.articles'), articles_path %></li>
        <li><%= link_to t('app.navbar.category'), categories_path %></li>
        <li><%= link_to t('app.navbar.about'), home_about_path %></li>
      </ul>
      <%= form_tag(search_path, method: :get, class: "navbar-form navbar-left search-form") do %>
        <div class="input-group">
          <%= search_field_tag "q[title_cont]", params["q"] && params["q"]["title_cont"], class: "form-control input-sm", placeholder: "文章名称" %>
          <span class="input-group-btn">
            <button type="submit" class="btn btn-primary btn-sm" type="button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
          </span>
        </div>
      <% end %>
      </ul>
    </div>
  </div>
</div>
