<% @recent_articles.each do |article| %>
<div class="page-header">
<h1><%= link_to article.title, article_path(article) %></h1>
</div>
<article id="article">
  <div class="time"><%= l(article.created_at) %><span class="pull-right"> 
  	<%= link_to t("models.comments"), disques_count(article, false), :"data-disqus-identifer" => article.id %></span>
  </div>
  <h3>
    <% article.labels.each do |label| %>
      <span class="label label-primary" style="margin-right: 1rem"><%= label.name %> </span>
    <% end %>
  </h3>

  <div class="markdown-body"><%= markdown(article.content) %> </div>
</article>
<% end %>
